{
  "name": "mono-runner",
  "version": "0.3.0",
  "type": "module",
  "author": "Jan Nitschke",
  "keywords": [
    "runner",
    "monorepo",
    "svelte",
    "sass",
    "vite",
    "bun",
    "typescript",
    "yarn",
    "pnpm"
  ],
  "license": "MIT",
  "scripts": {
    "build": "bun build --target=node ./lib/cli.ts ./lib/index.ts --outdir=./dist --external typescript --external vite",
    "dev": "bun build --target=node ./lib/cli.ts ./lib/index.ts --outdir=./dist --external typescript --external vite --watch",
    "prepare": "bun run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JanNitschke/mono-runner.git"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.2.2"
  },
  "types": "./lib/index.ts",
  "main": "./dist/index.js",
  "bin": {
    "mono": "dist/cli.js"
  }
}